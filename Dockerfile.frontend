# ── Stage 1: Build ───────────────────────────────────────────────────────────
FROM node:22-alpine AS builder

WORKDIR /app

COPY package*.json ./
RUN npm ci

COPY . .

# Produces locale-specific build folders
RUN npx nx build descartes-square --configuration=production

# Show actual output structure so we can verify paths
RUN find dist/descartes-square -maxdepth 4 -type d

# ── Stage 2: Serve ───────────────────────────────────────────────────────────
FROM nginx:1.27-alpine

COPY docker/nginx/nginx.conf /etc/nginx/conf.d/default.conf

COPY --from=builder /app/dist/descartes-square/en/browser /usr/share/nginx/html/en
COPY --from=builder /app/dist/descartes-square/uk/browser /usr/share/nginx/html/uk

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
